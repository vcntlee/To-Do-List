<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nameRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Name"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/taskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:textSize="16sp"
            android:imeOptions="actionDone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notesRow"
        android:layout_below="@id/nameRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Notes"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/taskNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:textSize="16sp"
            android:imeOptions="actionDone"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/levelRow"
        android:layout_below="@id/notesRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Priority"
            android:textStyle="bold"

            />

        <Spinner
            android:id="@+id/taskLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/statusRow"
        android:layout_below="@id/levelRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Status"
            android:textStyle="bold"

            />

        <Spinner
            android:id="@+id/taskStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateRow"
        android:layout_below="@id/statusRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Date"
            android:layout_gravity="center"
            android:textStyle="bold"

            />

        <DatePicker
            android:id="@+id/taskDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            />

    </LinearLayout>

</RelativeLayout>
</ScrollView>